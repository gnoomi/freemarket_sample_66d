.wrapper
  = render 'shared/header1'
  .ii-top
    .ii-menu
      .ii-info 
        = image_tag 'logo_red.svg', class: "ii-info__image"
      .ii-tag
        %h1.ii-tag--title 人気のカテゴリー
        .ii-tag__categorys
          %ul.ii-tag__categorys__list
            %li.ii-tag__categorys__list__name レデイース
            %li.ii-tag__categorys__list__name メンズ
            %li.ii-tag__categorys__list__name ベビー
      .ii-contents
        .ii-contents-nav
          .ii-contents-nav__name
            %h1.ii-contents-nav__name--title 商品一覧
            = link_to "もっとみる >", root_path, class: "ii-contents-nav__name--link"
          .ii-contents-nav__items
            .ii-contents-nav__items__list
              %ul.ii-contents-nav__items__list__items
                - @items.each do |item|
                  = link_to "items/#{item.id}",class: "ii-contents-nav__items__list__items__item", method: :get do
                    %li
                      = image_tag item.images[0].source.url,width: "100%",height: "170px"
                      .ii-contents-nav__items__list__items__item__price
                        .ii-contents-nav__items__list__items__item__price__box
                          ¥ 
                          = item.price.to_s(:delimited)
                      .ii-name
                        = item.name.truncate(20)


  = render 'shared/camera'
  = render 'shared/footer1'
