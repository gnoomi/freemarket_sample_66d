= render 'shared/header1'

%main.main

  = render 'shared/side-bar'

  .contents
    .contents__cn-contents
    = form_tag("/cards/create", method: :post, id: 'charge-form', class: "contents__cn-contents__head", name: "inputForm") do
      クレジットカード情報入力
      .contents__cn-contents__form        
        .contents__cn-contents__form__single
          .contents__cn-contents__form__single__group
            .contents__cn-contents__form__single__group__label
              .contents__cn-contents__form__single__group__label__text
                カード番号
              .contents__cn-contents__form__single__group__label__span
                必須
            = text_field_tag "number", "", class: "cn-input number", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
            %i.cn-card-list
              = image_tag "//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?3649802486", class: "cn-img"
              = image_tag "//www-mercari-jp.akamaized.net/assets/img/card/master-card.svg?3649802486", class: "cn-img"
              = image_tag "//www-mercari-jp.akamaized.net/assets/img/card/saison-card.svg?3649802486", class: "cn-img"
              = image_tag "//www-mercari-jp.akamaized.net/assets/img/card/jcb.svg?3649802486", class: "cn-img"
              = image_tag "//www-mercari-jp.akamaized.net/assets/img/card/american_express.svg?3649802486", class: "cn-img"
              = image_tag "//www-mercari-jp.akamaized.net/assets/img/card/dinersclub.svg?3649802486", class: "cn-img"
              = image_tag "//www-mercari-jp.akamaized.net/assets/img/card/discover.svg?3649802486", class: "cn-img"    
          .contents__cn-contents__form__single__group
            .contents__cn-contents__form__single__group__label
              .contents__cn-contents__form__single__group__label__text
                有効期限
              .contents__cn-contents__form__single__group__label__span
                必須
            .cn-select-wrap  
            %select#exp_month{class: 'cn-select', name: "exp_month", type: "text"}
              %option{value: ""} --
              %option{value: "1"}01
              %option{value: "2"}02
              %option{value: "3"}03
              %option{value: "4"}04
              %option{value: "5"}05
              %option{value: "6"}06
              %option{value: "7"}07
              %option{value: "8"}08
              %option{value: "9"}09
              %option{value: "10"}10
              %option{value: "11"}11
              %option{value: "12"}12
            = icon 'fa', 'chevron-down', class: 'cn-fa'
            %text.year-and-month
              月  
            %select#exp_year{class: 'cn-select', name: "exp_year", type: "text"}
              %option{value: ""} --
              %option{value: "2019"}19
              %option{value: "2020"}20
              %option{value: "2021"}21
              %option{value: "2022"}22
              %option{value: "2023"}23
              %option{value: "2024"}24
              %option{value: "2025"}25
              %option{value: "2026"}26
              %option{value: "2027"}27
              %option{value: "2028"}28
              %option{value: "2029"}29
            = icon 'fa', 'chevron-down', class: 'cn-fa'
            %text.year-and-month
              年
          .contents__cn-contents__form__single__group
            .contents__cn-contents__form__single__group__label
              .contents__cn-contents__form__single__group__label__text
                セキリュティコード
              .contents__cn-contents__form__single__group__label__span
                必須   
            = text_field_tag "cvc", "", class: "cn-input cvc", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "cvc"
            .cn-signup-seqcode
              .cn-signup-seqcode__q
                ?
              .cn-signup-seqcode__text
                カード裏面の番号とは？
          .contents__cn-contents__form__single__group      
            #card_token
            = submit_tag "追加する", class: "cn-btn-red", id: "token_submit"

  = render 'shared/camera'

= render 'shared/footer1'