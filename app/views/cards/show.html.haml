= render 'shared/header1'
- breadcrumb :method_of_payment
= render "shared/breadcrumbs"

%main.main

  = render 'shared/side-bar'

  .contents
    .contents__ci-contents
      .contents__ci-contents__head
        支払い方法
      .contents__ci-contents__innner
        .contents__ci-contents__innner__label
          .contents__ci-contents__innner__label__sub
            クレジットカード一覧
        .contents__ci-contents__innner__add-cards
          .contents__ci-contents__innner__add-cards__single
            .div
              = "**** **** **** " + @default_card_information.last4
            .div
              - exp_month = @default_card_information.exp_month.to_s
              - exp_year = @default_card_information.exp_year.to_s.slice(2,3)
              = exp_month + " / " + exp_year
          .contents__ci-contents__innner__add-cards__single
           
            %input{ type: "hidden", name: "card_id", value: "" }
            .contents__ci-contents__innner__add-cards__single__box
              .contents__ci-contents__innner__add-cards__single__box__cn-btn-red{href: ""}
                = icon 'far', 'credit-card', class: "ci-icon"
                .contents__ci-contents__innner__add-cards__single__box__cn-btn-red__text
                  クレジットカードを追加する
        .contents__ci-contents__innner__regist
          .contents__ci-contents__innner__regist__blank
            .contents__ci-contents__innner__regist__blank__text
              支払い方法について
              = icon 'fas', 'chevron-right', class: "ci-right"

  = render 'shared/camera'

= render 'shared/footer1'