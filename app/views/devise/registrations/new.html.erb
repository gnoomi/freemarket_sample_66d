<h2>Sign up</h2>

<%= form_for @user, url: create_user_path do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :nickname %><br />
    <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <%= f.fields_for :personal_datum do |fin| %>
    <div class="field">
      <%= fin.label :last_name %><br />
      <%= fin.text_field :last_name, autocomplete: "last_name" %>
    </div>

    <div class="field">
      <%= fin.label :first_name %><br />
      <%= fin.text_field :first_name, autocomplete: "first_name" %>
    </div>

    <div class="field">
      <%= fin.label :kana_last_name %><br />
      <%= fin.text_field :kana_last_name, autocomplete: "kana_last_name" %>
    </div>

    <div class="field">
      <%= fin.label :kana_first_name %><br />
      <%= fin.text_field :kana_first_name, autocomplete: "kana_first_name" %>
    </div>

    <div class="field">
      <%= fin.label :birthday %><br />
      <%= fin.number_field :birthday_year, autocomplete: "birthday_year" %>
      <%= fin.number_field :birthday_month, autocomplete: "birthday_month" %>
      <%= fin.number_field :birthday_day, autocomplete: "birthday_day" %>
    </div>

  <% end %>

  <div class="actions">
    <%= f.submit "Next" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
