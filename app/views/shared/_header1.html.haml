.header1
  .header1-main
    .header1-main__text
      .header1-main__text__logo
        = link_to root_path, class: 'fremalogo' do
          = image_tag 'fmarket_logo_red.svg'
      .header1-main__text__form

        = form_tag(search_items_path,:method => 'get') do
          = text_field_tag :keyword, '', class:'search-form', placeholder: "何かお探しですか？"
          = button_tag type: 'submit', :name => nil, class: 'search-icon' do
            = icon 'fas', 'search'

    .header1-main__nav
      .header1-main__nav__js
        .header1-main__nav__js__links
          = link_to root_path, class: "header1-main__nav__js__links__link"  do
            = icon 'fas', 'list', class: 'navicon'
            カテゴリーから探す
        .header1-main__nav__js__links
          = link_to root_path, class: "header1-main__nav__js__links__link"  do
            = icon 'fas', 'tag', class: 'navicon'
            ブランドから探す




      - if user_signed_in?      
        %ul.header1-main__nav__menu
          %li.header1-main__nav__menu__link
            = link_to root_path, class: "header1-main__nav__menu__link--mypage"  do
              = icon 'far', 'heart', class: 'menuicon'
              いいね！一覧
          %li.header1-main__nav__menu__link
            = link_to root_path, class: "header1-main__nav__menu__link--mypage"  do
              = icon 'far', 'bell', class: 'menuicon'
              お知らせ
          %li.header1-main__nav__menu__link
            = link_to root_path, class: "header1-main__nav__menu__link--mypage"  do
              = icon 'fas', 'check', class: 'menuicon'
              やることリスト
          %li.header1-main__nav__menu__link
            = link_to mypage_path(current_user.id), class: "header1-main__nav__menu__link--mypage"  do
              = icon 'far', 'user', class: 'menuicon'
              マイページ
      - else
        %ul.header1-main__nav__menu__member
          %li= link_to "新規会員登録", new_user_registration_path, class: 'header1-main__nav__menu__member__register'
          .color-change
            %li= link_to "ログイン", new_user_session_path, class: 'header1-main__nav__menu__member__login'


